<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>
        <%- include('../includes/navigation.ejs') %>
        <% if (orders.length <= 0 ) { %>
                <h2>Nothing here</h2>
        <% } else { %>
                <ul>
                        <% orders.forEach(order => { %>
                                <li>
                                        <h1># <%= order._id %></h1>
                                        <ul>    
                                            <% order.products.forEach( p => { %>
                                                <li><%= p.product.title %> (<%= p.quantity %>) </li>
                                                <% }); %>
                                        </ul>

                                </li>
                        <% }); %>
                </ul>
        <% } %>
</body>
</html>